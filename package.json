{
  "name": "affogato",
  "version": "0.2.1",
  "description": "Run only the tests affected by your TypeScript changes.",
  "repository": "git@github.com:apple-yagi/affogato.git",
  "license": "MIT",
  "author": "apple-yagi <applesryu@gmail.com>",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && ncc build src/index.ts --license licenses.txt -o dist",
    "changeset": "changeset",
    "changeset:publish": "pnpm run build && changeset publish",
    "changeset:version": "changeset version",
    "editorconfig": "editorconfig-checker",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "oxlint --fix",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "ts-morph": "^26.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.0.7",
    "@vercel/ncc": "^0.38.3",
    "editorconfig-checker": "^6.1.0",
    "oxlint": "^1.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=20"
  }
}
