{
  "name": "test-scope",
  "version": "0.0.1",
  "description": "Run only the tests affected by your TypeScript changes.",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "build": "rm -rf dist && ncc build src/index.ts --license licenses.txt -o dist",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint --fix"
  },
  "repository": "git@github.com:apple-yagi/test-scope.git",
  "author": "apple-yagi <applesryu@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@types/node": "^24.0.7",
    "@vercel/ncc": "^0.38.3",
    "oxlint": "^1.3.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "ts-morph": "^26.0.0"
  }
}
